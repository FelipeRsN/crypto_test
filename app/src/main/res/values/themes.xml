<resources>
    <!-- Base application theme. -->
    <style name="Theme.CryptoApp.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/backgroundColor</item>
        <item name="colorPrimaryVariant">@color/appBarColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/appBarColor</item>

        <!-- Ui themes -->
        <item name="textInputStyle">@style/Theme.CryptoApp.TextInputLayout</item>
        <item name="editTextStyle">@style/Theme.CryptoApp.EditText</item>
        <item name="buttonStyle">@style/Theme.CryptoApp.Button</item>
    </style>

    <!-- Sign in screen theme to create translucent appBar -->
    <style name="Theme.CryptoApp.SignIn" parent="Theme.CryptoApp.Base">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>