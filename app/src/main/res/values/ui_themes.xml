<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Ui components themes -->
    <style name="Theme.CryptoApp.EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColor">@color/fieldTextColor</item>
        <item name="android:textColorHint">@color/fieldHintColor</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.CryptoApp.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/bg_button_accent</item>
        <item name="android:textColor">@color/onAccentColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:height">44dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.CryptoApp.Toolbar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/appBarColor</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="Theme.CryptoApp.ClickableTextView" parent="@android:style/Widget.TextView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/bg_ripple_light</item>
    </style>

    <!-- Used to remove background from textInputLayout and use background from his child -->
    <style name="Theme.CryptoApp.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="colorOnSurface">@android:color/transparent</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">false</item>
    </style>

    <style name="Theme.CryptoApp.MaterialDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/Theme.CryptoApp.MaterialDialog.Shape</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.CryptoApp.MaterialDialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.CryptoApp.MaterialDialog.Button</item>
    </style>

    <style name="Theme.CryptoApp.MaterialDialog.Shape">
        <item name="cornerSize">30dp</item>
    </style>

    <style name="Theme.CryptoApp.MaterialDialog.Button" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>



</resources>